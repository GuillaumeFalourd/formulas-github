{
  "dockerImageBuilder": "ritclizup/rit-python3-builder",
  "inputs": [
    {
      "name": "rit_github_token",
      "type": "CREDENTIAL_GITHUB_TOKEN"
    },
    {
      "label": "Repository owner:",
      "name": "rit_github_owner",
      "tutorial": "Ex: octocat",
      "type": "text",
      "required": true
    },
    {
      "label": "Repository name:",
      "name": "rit_github_repo",
      "tutorial": "Ex: ritchie-formulas",
      "type": "text",
      "required": true
    },
    {
      "label": "Issue title:",
      "name": "rit_issue_title",
      "tutorial": "Ex: Bug to resolve a problem",
      "type": "text",
      "required": true
    },
    {
      "label": "Issue body:",
      "name": "rit_issue_body",
      "tutorial": "Ex: This error occurred when I tried to...",
      "type": "text",
      "required": true
    }
  ]
}
