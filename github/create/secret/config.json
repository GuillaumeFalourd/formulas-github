{
  "dockerImageBuilder": "ritclizup/rit-python3-builder",
  "inputs": [
    {
      "name": "rit_github_token",
      "type": "CREDENTIAL_GITHUB_TOKEN"
    },
    {
      "label": "Repository owner:",
      "name": "rit_repo_owner",
      "tutorial": "Ex: octocat",
      "type": "text",
      "required": true,
      "cache": {
        "active": true,
        "qty": 5,
        "newLabel": "Type new value:"
      }
    },
    {
      "label": "Repository name:",
      "name": "rit_github_repo",
      "tutorial": "Ex: ritchie-formulas",
      "type": "text",
      "required": true,
      "cache": {
        "active": true,
        "qty": 5,
        "newLabel": "Type new value:"
      }
    },
    {
      "label": "Secret name:",
      "name": "rit_secret_name",
      "tutorial": "Ex: MY_SECRET (without space)",
      "type": "text",
      "required": true
    },
    {
      "label": "Secret value:",
      "name": "rit_secret_value",
      "type": "text",
      "required": true
    }
  ]
}