{
  "dockerImageBuilder": "ritclizup/rit-python3-builder",
  "inputs": [
    {
      "label": "Github Username: ",
      "name": "rit_github_user",
      "required": true,
      "type": "text"
    },
    {
      "label": "Full Name: ",
      "name": "rit_name",
      "required": true,
      "type": "text"
    },
    {
      "label": "Current Job: ",
      "name": "rit_job",
      "required": true,
      "type": "text"
    },
    {
      "label": "Current Company: ",
      "name": "rit_company",
      "required": true,
      "type": "text"
    },
    {
      "label": "Want to add social network links?",
      "name": "rit_social_networks",
      "type": "text",
      "default": "no",
      "items": ["yes", "no"]
    },
    {
      "condition": {
            "variable": "rit_social_networks",
            "operator": "==",
            "value": "yes"
      },
      "label": "Which account do you want to add?",
      "name": "rit_accounts",
      "type": "multiselect",
      "required": false,
      "items": [
        "LinkedIn",
        "Twitter",
        "Instagram",
        "Facebook",
        "Medium"
        ]
    },
        {
      "label": "Want to add hard skills list?",
      "name": "rit_hard_skills",
      "type": "text",
      "default": "no",
      "items": ["yes", "no"]
    },
    {
      "condition": {
            "variable": "rit_hard_skills",
            "operator": "==",
            "value": "yes"
      },
      "label": "Which skills you want to add?",
      "name": "rit_hard_skills",
      "type": "multiselect",
      "required": false,
      "items": [
        "Front End",
        "Back End",
        "Tests",
        "SRE",
        "DB"
        ]
    }
  ]
}
