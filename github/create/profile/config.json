{
  "dockerImageBuilder": "ritclizup/rit-python3-builder",
  "inputs": [
    {
      "label": "Github Username: ",
      "name": "rit_github_user",
      "required": true,
      "type": "text"
    },
    {
      "label": "Full Name: ",
      "name": "rit_name",
      "required": true,
      "type": "text"
    },
    {
      "label": "Current Job: ",
      "name": "rit_job",
      "required": true,
      "type": "text"
    },
    {
      "label": "Current Company: ",
      "name": "rit_company",
      "required": true,
      "type": "text"
    },
    {
      "label": "Want to add social network links?",
      "name": "rit_social-networks",
      "type": "text",
      "default": "no",
      "items": ["yes", "no"]
    },
    {
      "condition": {
            "variable": "rit_social",
            "operator": "==",
            "value": "yes"
      },
      "label": "Add Linkedin Account ?",
      "name": "rit_linkedin_account",
      "type": "text",
      "default": "no",
      "items": ["yes", "no"]
    },
    {
      "condition": {
            "variable": "rit_linkedin_account",
            "operator": "==",
            "value": "yes"
      },
      "label": "Linkedin Account URL:",
      "name": "rit_linkedin_url",
      "type": "text",
      "tutorial": "Ex: https://www.linkedin.com/in/dennisritchie/"
    },
    {
      "condition": {
            "variable": "rit_social",
            "operator": "==",
            "value": "yes"
      },
      "label": "Add Twitter Account ?",
      "name": "rit_twitter_account",
      "type": "text",
      "default": "no",
      "items": ["yes", "no"]
    },
    {
      "condition": {
            "variable": "rit_twitter_account",
            "operator": "==",
            "value": "yes"
      },
      "label": "Twitter Account URL:",
      "name": "rit_twitter_url",
      "type": "text",
      "tutorial": "Ex: https://twitter.com/DennisRitchie"
    },
    {
      "condition": {
            "variable": "rit_social",
            "operator": "==",
            "value": "yes"
      },
      "label": "Add Medium Account ?",
      "name": "rit_medium_account",
      "type": "text",
      "default": "no",
      "items": ["yes", "no"]
    },
    {
      "condition": {
            "variable": "rit_medium_account",
            "operator": "==",
            "value": "yes"
      },
      "label": "Medium Account URL:",
      "name": "rit_medium_url",
      "type": "text",
      "tutorial": "Ex: https://medium.com/@dennis.ritchie"
    }
  ]
}
